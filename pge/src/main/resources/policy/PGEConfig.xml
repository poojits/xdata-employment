<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>
    <!-- How to run the PGE -->
    <exe dir="[ScriptDir]" shell="/bin/bash">
        <cmd>echo [FileLocation]/[Filename]</cmd>
        <cmd>python EmploymentMetExtractor.py -f [FileLocation]/[Filename] -v</cmd>
        <cmd>echo [FileLocation]/[Filename] | poster -v -u http://localhost:8080/solr/update/json?commit=true</cmd>
    </exe>

